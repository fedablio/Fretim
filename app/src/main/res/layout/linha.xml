<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIdLinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="PROTOCOLO"
        android:textColor="#FF0000"
        android:textIsSelectable="true"
        android:textSize="21dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:paddingLeft="5dp"
            android:text="Orig.: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrigemLinha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDF5E6"
            android:inputType="text"
            android:paddingRight="5dp"
            android:text="ORIGEM"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:text="Dest.: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDestinoLinha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:inputType="text"
            android:paddingRight="5dp"
            android:text="DESTINO"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:paddingLeft="5dp"
            android:text="Dist.: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDistanciaLinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:text="DISTANCIA"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:text="Data: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataLinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:paddingRight="5dp"
            android:text="DATA"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:paddingLeft="5dp"
            android:text="Hora: "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHoraLinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:inputType="time"
            android:paddingRight="5dp"
            android:text="HORA"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:text="Valor: "
            android:textColor="#008000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvValorLinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:text="VALOR"
            android:textColor="#008000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>